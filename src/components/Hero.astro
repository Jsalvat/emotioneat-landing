---
interface Props {
  t: any;
}

const { t } = Astro.props;
const appUrl = import.meta.env.PUBLIC_APP_URL || 'https://app.emotioneat.com';
---

<section class="relative pt-32 pb-20 px-4 sm:px-6 lg:px-8 overflow-hidden">
  <!-- Background Gradient -->
  <div class="absolute inset-0 bg-gradient-to-br from-primary-50 via-secondary-50 to-accent-50 opacity-60"></div>

  <!-- Decorative Elements -->
  <div class="absolute top-20 right-10 w-72 h-72 bg-primary-200 rounded-full opacity-20 blur-3xl"></div>
  <div class="absolute bottom-20 left-10 w-96 h-96 bg-secondary-200 rounded-full opacity-20 blur-3xl"></div>

  <!-- Content -->
  <div class="relative container mx-auto max-w-4xl text-center">
    <!-- Headline -->
    <h1 class="text-5xl sm:text-6xl lg:text-7xl font-bold text-neutral-900 mb-6 leading-tight animate-on-scroll">
      {t.hero.headline}
    </h1>

    <!-- Subheadline -->
    <p class="text-xl text-neutral-600 mb-10 leading-relaxed max-w-2xl mx-auto animate-on-scroll delay-100">
      {t.hero.subheadline}
    </p>

    <!-- CTA Buttons -->
    <div class="flex flex-col sm:flex-row gap-4 justify-center mb-6 animate-on-scroll delay-200">
      <a
        href={appUrl}
        class="inline-flex items-center justify-center px-8 py-4 bg-primary-400 hover:bg-primary-500 text-white text-lg font-semibold rounded-2xl transition-all hover:shadow-xl hover:-translate-y-1 whitespace-nowrap focus:outline-none focus:ring-2 focus:ring-primary-300 focus:ring-offset-2"
        data-cta-location="hero-primary"
        aria-label={t.hero.cta}
      >
        {t.hero.cta}
        <svg class="ml-2 w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
        </svg>
      </a>
      <a
        href="#how-it-works"
        class="inline-flex items-center justify-center px-8 py-4 bg-white hover:bg-neutral-50 text-primary-500 text-lg font-semibold rounded-2xl border-2 border-primary-200 transition-all hover:shadow-lg whitespace-nowrap focus:outline-none focus:ring-2 focus:ring-primary-300 focus:ring-offset-2"
        aria-label={t.hero.ctaSecondary}
      >
        {t.hero.ctaSecondary}
      </a>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce" aria-hidden="true">
    <svg class="w-6 h-6 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
    </svg>
  </div>
</section>
