---
interface Props {
  t: any;
}

const { t } = Astro.props;
const appUrl = import.meta.env.PUBLIC_APP_URL || 'https://app.emotioneat.com';
---

<section class="relative py-24 sm:py-32 px-4 sm:px-6 lg:px-8 overflow-hidden">
  <!-- Background gradient - warmer and softer -->
  <div class="absolute inset-0 bg-gradient-to-br from-primary-100 via-primary-50 to-secondary-50"></div>

  <!-- Decorative elements -->
  <div class="absolute top-0 left-0 w-96 h-96 bg-primary-200/40 rounded-full blur-3xl -translate-x-1/2 -translate-y-1/2"></div>
  <div class="absolute bottom-0 right-0 w-96 h-96 bg-secondary-200/40 rounded-full blur-3xl translate-x-1/2 translate-y-1/2"></div>
  <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-white/30 rounded-full blur-3xl"></div>

  <!-- Pattern overlay -->
  <div class="absolute inset-0 opacity-[0.03]">
    <div class="absolute inset-0" style="background-image: radial-gradient(circle at 2px 2px, currentColor 1px, transparent 0); background-size: 32px 32px;"></div>
  </div>

  <div class="relative container mx-auto max-w-4xl text-center animate-on-scroll">
    <!-- Icon/Visual element -->
    <div class="inline-flex items-center justify-center w-20 h-20 bg-white/80 backdrop-blur-sm rounded-3xl shadow-lg shadow-primary-200/30 mb-8">
      <svg class="w-10 h-10 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
      </svg>
    </div>

    <!-- Content -->
    <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-neutral-800 mb-6 leading-tight">
      Ready to understand yourself?
    </h2>
    <p class="text-lg sm:text-xl text-neutral-600 mb-10 max-w-2xl mx-auto leading-relaxed">
      Start with a conversation. See what patterns emerge.
      <span class="block mt-2">Take it one day at a time.</span>
    </p>

    <!-- CTA Button -->
    <div class="flex flex-col items-center space-y-6">
      <a
        href={appUrl}
        class="group relative inline-flex items-center px-10 sm:px-12 py-5 overflow-hidden rounded-2xl transition-all duration-300 hover:shadow-2xl hover:shadow-primary-400/30 hover:-translate-y-1"
        data-cta-location="footer-cta"
        aria-label="Begin your journey"
      >
        <span class="absolute inset-0 bg-gradient-to-r from-primary-400 via-primary-500 to-primary-400 bg-[length:200%_100%] animate-gradient-flow"></span>
        <span class="absolute inset-0 bg-gradient-to-t from-black/10 to-transparent"></span>
        <span class="relative text-white text-lg sm:text-xl font-bold flex items-center gap-3">
          Begin My Journey
          <svg class="w-5 h-5 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
          </svg>
        </span>
      </a>

      <p class="text-sm text-neutral-500">
        Free to start. No credit card required.
      </p>
    </div>

    <!-- Trust indicators - emotional, not corporate -->
    <div class="mt-16 flex flex-wrap justify-center items-center gap-8 sm:gap-12 animate-on-scroll delay-200">
      <div class="flex items-center gap-3 text-neutral-600">
        <div class="w-10 h-10 rounded-xl bg-white/60 flex items-center justify-center text-secondary-500">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <span class="text-sm font-medium">No judgment, ever</span>
      </div>
      <div class="flex items-center gap-3 text-neutral-600">
        <div class="w-10 h-10 rounded-xl bg-white/60 flex items-center justify-center text-secondary-500">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
          </svg>
        </div>
        <span class="text-sm font-medium">Your story stays private</span>
      </div>
      <div class="flex items-center gap-3 text-neutral-600">
        <div class="w-10 h-10 rounded-xl bg-white/60 flex items-center justify-center text-secondary-500">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
          </svg>
        </div>
        <span class="text-sm font-medium">Cancel anytime, no questions</span>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes gradient-flow {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }

  .animate-gradient-flow {
    animation: gradient-flow 4s ease infinite;
  }
</style>
