---
interface Props {
  t: any;
}

const { t } = Astro.props;

const steps = [
  {
    number: "01",
    title: t.howItWorks.step1.title,
    description: t.howItWorks.step1.description,
    icon: `<svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"></path>
    </svg>`,
    color: "brand"
  },
  {
    number: "02",
    title: t.howItWorks.step2.title,
    description: t.howItWorks.step2.description,
    icon: `<svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
    </svg>`,
    color: "calm"
  },
  {
    number: "03",
    title: t.howItWorks.step3.title,
    description: t.howItWorks.step3.description,
    icon: `<svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
    </svg>`,
    color: "mint"
  }
];
---

<section id="how-it-works" class="py-24 px-4 sm:px-6 lg:px-8 bg-white">
  <div class="container mx-auto max-w-7xl">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-4">
        {t.howItWorks.title}
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        {t.howItWorks.subtitle}
      </p>
    </div>

    <!-- Steps -->
    <div class="grid md:grid-cols-3 gap-8 lg:gap-12">
      {steps.map((step, index) => (
        <div class={`relative group animate-on-scroll delay-${(index + 1) * 100}`}>
          <!-- Connector Line (hidden on mobile, shown on desktop between cards) -->
          {index < steps.length - 1 && (
            <div class="hidden md:block absolute top-20 left-full w-full h-0.5 bg-gradient-to-r from-gray-200 to-transparent -z-10"></div>
          )}

          <!-- Card -->
          <div class="relative bg-white rounded-3xl p-8 border-2 border-gray-100 hover:border-{step.color}-200 transition-all hover:shadow-xl group-hover:-translate-y-2 h-full flex flex-col">
            <!-- Number Badge -->
            <div class={`absolute -top-4 -left-4 w-12 h-12 bg-gradient-to-br from-${step.color}-500 to-${step.color}-600 text-white rounded-xl flex items-center justify-center font-bold text-lg shadow-lg`}>
              {step.number}
            </div>

            <!-- Icon -->
            <div class={`w-16 h-16 bg-gradient-to-br from-${step.color}-100 to-${step.color}-200 rounded-2xl flex items-center justify-center text-${step.color}-600 mb-6`}>
              <Fragment set:html={step.icon} />
            </div>

            <!-- Content -->
            <div class="flex-1">
              <h3 class="text-2xl font-bold text-gray-900 mb-3">
                {step.title}
              </h3>
              <p class="text-gray-600 leading-relaxed">
                {step.description}
              </p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
