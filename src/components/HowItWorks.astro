---
interface Props {
  t: any;
}

const { t } = Astro.props;

const steps = [
  {
    number: "01",
    title: "Share how you're really doing",
    description: "Talk to your AI companion like you would a friend who truly listens. Share what happened today, how you felt, what you ate and why. No judgment, ever.",
    icon: `<svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
    </svg>`,
    gradient: "from-primary-400 to-primary-500",
    bgLight: "bg-primary-50",
    textColor: "text-primary-500"
  },
  {
    number: "02",
    title: "See what's really going on",
    description: "Your companion notices patterns you might miss—the stress before the snack, the loneliness behind the late-night eating. Understanding is the first step to change.",
    icon: `<svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
    </svg>`,
    gradient: "from-secondary-400 to-secondary-500",
    bgLight: "bg-secondary-50",
    textColor: "text-secondary-500"
  },
  {
    number: "03",
    title: "Take one small step each day",
    description: "Get gentle challenges designed just for you. Not about restriction—about awareness, about building a kinder relationship with food and yourself.",
    icon: `<svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"></path>
    </svg>`,
    gradient: "from-accent-300 to-accent-400",
    bgLight: "bg-accent-50",
    textColor: "text-accent-500"
  }
];
---

<section id="how-it-works" class="relative py-24 sm:py-32 px-4 sm:px-6 lg:px-8 overflow-hidden bg-white">
  <!-- Background pattern -->
  <div class="absolute inset-0 opacity-[0.02]">
    <div class="absolute inset-0" style="background-image: radial-gradient(circle at 1px 1px, currentColor 1px, transparent 0); background-size: 40px 40px;"></div>
  </div>

  <div class="relative container mx-auto max-w-7xl">
    <!-- Section Header -->
    <div class="text-center mb-20 animate-on-scroll">
      <span class="inline-block px-4 py-2 bg-secondary-50 text-secondary-600 text-sm font-semibold rounded-full mb-6">
        Simple & Effective
      </span>
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-neutral-800 mb-6">
        How your journey unfolds
      </h2>
      <p class="text-lg sm:text-xl text-neutral-500 max-w-2xl mx-auto">
        No complicated setup. No overwhelming features.
        <span class="block mt-1">Just you, a conversation, and daily steps forward.</span>
      </p>
    </div>

    <!-- Steps -->
    <div class="relative">
      <!-- Connection line (desktop) -->
      <div class="hidden lg:block absolute top-32 left-[16.5%] right-[16.5%] h-0.5">
        <div class="w-full h-full bg-gradient-to-r from-primary-200 via-secondary-200 to-accent-200 rounded-full"></div>
        <!-- Animated dots -->
        <div class="absolute top-1/2 -translate-y-1/2 left-0 w-3 h-3 bg-primary-400 rounded-full shadow-lg shadow-primary-300/50"></div>
        <div class="absolute top-1/2 -translate-y-1/2 left-1/2 -translate-x-1/2 w-3 h-3 bg-secondary-400 rounded-full shadow-lg shadow-secondary-300/50"></div>
        <div class="absolute top-1/2 -translate-y-1/2 right-0 w-3 h-3 bg-accent-400 rounded-full shadow-lg shadow-accent-300/50"></div>
      </div>

      <div class="grid lg:grid-cols-3 gap-8 lg:gap-12">
        {steps.map((step, index) => (
          <div class={`relative animate-on-scroll delay-${(index + 1) * 100}`}>
            <!-- Step Card -->
            <div class="group relative bg-white rounded-3xl p-8 lg:p-10 border-2 border-neutral-100 hover:border-transparent transition-all duration-500 hover:shadow-2xl hover:-translate-y-2 h-full flex flex-col">
              <!-- Gradient border effect on hover -->
              <div class={`absolute inset-0 rounded-3xl bg-gradient-to-br ${step.gradient} opacity-0 group-hover:opacity-10 transition-opacity duration-500 -z-10`}></div>

              <!-- Number badge -->
              <div class="absolute -top-5 -left-3 lg:-left-5">
                <div class={`relative w-14 h-14 bg-gradient-to-br ${step.gradient} rounded-2xl flex items-center justify-center shadow-lg transform -rotate-3 group-hover:rotate-0 transition-transform duration-300`}>
                  <span class="text-white font-bold text-lg">{step.number}</span>
                </div>
              </div>

              <!-- Icon -->
              <div class={`w-20 h-20 ${step.bgLight} rounded-3xl flex items-center justify-center ${step.textColor} mb-8 mt-4 group-hover:scale-110 transition-transform duration-300`}>
                <Fragment set:html={step.icon} />
              </div>

              <!-- Content -->
              <div class="flex-1">
                <h3 class="text-2xl font-bold text-neutral-800 mb-4 leading-snug">
                  {step.title}
                </h3>
                <p class="text-neutral-500 text-lg leading-relaxed">
                  {step.description}
                </p>
              </div>

              <!-- Bottom accent -->
              <div class={`mt-8 h-1 w-16 rounded-full bg-gradient-to-r ${step.gradient} opacity-40 group-hover:opacity-100 group-hover:w-full transition-all duration-500`}></div>
            </div>

            <!-- Mobile connector -->
            {index < steps.length - 1 && (
              <div class="lg:hidden flex justify-center my-6">
                <div class="w-0.5 h-12 bg-gradient-to-b from-neutral-200 to-transparent"></div>
              </div>
            )}
          </div>
        ))}
      </div>
    </div>

    <!-- Bottom CTA hint -->
    <div class="text-center mt-16 sm:mt-20 animate-on-scroll delay-400">
      <p class="text-neutral-400 mb-4">Ready to start?</p>
      <a
        href="#features"
        class="inline-flex items-center gap-2 text-primary-500 font-semibold hover:text-primary-600 transition-colors"
      >
        See what you'll get
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
        </svg>
      </a>
    </div>
  </div>
</section>
