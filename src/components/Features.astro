---
interface Props {
  t: any;
}

const { t } = Astro.props;

const features = [
  {
    title: "Finally understand your 'why'",
    description: "Why do you reach for food when you're not hungry? Your companion helps you see the connections between your emotions and eating that you've been missing.",
    icon: `<svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
    </svg>`,
    gradient: "from-primary-400 to-primary-500",
    size: "large"
  },
  {
    title: "Daily steps, designed for you",
    description: "Not generic advice from the internet. Each day, you get 5 small challenges based on YOUR patterns, YOUR life, YOUR goals. Achievable. Meaningful.",
    icon: `<svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
    </svg>`,
    gradient: "from-secondary-400 to-secondary-500",
    size: "large"
  },
  {
    title: "Watch yourself grow",
    description: "Look back at your journey anytime. See the moments of struggle, the breakthroughs, the patterns that are finally shifting.",
    icon: `<svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
    </svg>`,
    gradient: "from-accent-300 to-accent-400",
    size: "medium"
  },
  {
    title: "Guidance that gets you",
    description: "Not cookie-cutter tips. Advice based on what you've shared, what you're going through, and what actually works for you.",
    icon: `<svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
    </svg>`,
    gradient: "from-primary-300 to-secondary-400",
    size: "medium"
  },
  {
    title: "A safe space, always",
    description: "What you share stays between you and your companion. Bank-level encryption. No data selling. Your healing journey is yours alone.",
    icon: `<svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
    </svg>`,
    gradient: "from-neutral-500 to-neutral-600",
    size: "medium"
  }
];
---

<section id="features" class="relative py-24 sm:py-32 px-4 sm:px-6 lg:px-8 overflow-hidden">
  <!-- Background -->
  <div class="absolute inset-0 bg-gradient-to-b from-white via-secondary-50/20 to-white"></div>

  <!-- Decorative elements -->
  <div class="absolute top-1/4 -left-32 w-64 h-64 bg-primary-100/40 rounded-full blur-3xl"></div>
  <div class="absolute bottom-1/4 -right-32 w-64 h-64 bg-secondary-100/40 rounded-full blur-3xl"></div>

  <div class="relative container mx-auto max-w-7xl">
    <!-- Section Header -->
    <div class="text-center mb-16 sm:mb-20 animate-on-scroll">
      <span class="inline-block px-4 py-2 bg-primary-50 text-primary-600 text-sm font-semibold rounded-full mb-6">
        What You Get
      </span>
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-neutral-800 mb-6">
        What changes when you
        <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary-500 to-secondary-500">understand yourself</span>
      </h2>
      <p class="text-lg sm:text-xl text-neutral-500 max-w-2xl mx-auto">
        Tools designed to help you understand your habits and create real, lasting change.
      </p>
    </div>

    <!-- Features Grid - Asymmetric Layout -->
    <div class="grid lg:grid-cols-2 gap-6 lg:gap-8 mb-8">
      <!-- Large Cards - Row 1 -->
      {features.filter(f => f.size === 'large').map((feature, index) => (
        <div class={`group animate-on-scroll delay-${(index + 1) * 100}`}>
          <div class="relative h-full bg-white rounded-3xl p-8 lg:p-10 border-2 border-neutral-100 hover:border-transparent transition-all duration-500 hover:shadow-2xl hover:-translate-y-1 overflow-hidden">
            <!-- Gradient background on hover -->
            <div class={`absolute inset-0 bg-gradient-to-br ${feature.gradient} opacity-0 group-hover:opacity-5 transition-opacity duration-500`}></div>

            <!-- Decorative corner gradient -->
            <div class={`absolute -top-20 -right-20 w-40 h-40 bg-gradient-to-br ${feature.gradient} opacity-10 rounded-full blur-2xl group-hover:opacity-20 transition-opacity duration-500`}></div>

            <div class="relative">
              <!-- Icon with gradient background -->
              <div class={`inline-flex items-center justify-center w-16 h-16 bg-gradient-to-br ${feature.gradient} rounded-2xl text-white mb-6 shadow-lg group-hover:scale-110 transition-transform duration-300`}>
                <Fragment set:html={feature.icon} />
              </div>

              <!-- Content -->
              <h3 class="text-2xl lg:text-3xl font-bold text-neutral-800 mb-4">
                {feature.title}
              </h3>
              <p class="text-neutral-500 text-lg leading-relaxed">
                {feature.description}
              </p>
            </div>

            <!-- Bottom accent line -->
            <div class={`absolute bottom-0 left-0 right-0 h-1 bg-gradient-to-r ${feature.gradient} opacity-0 group-hover:opacity-100 transition-opacity duration-500`}></div>
          </div>
        </div>
      ))}
    </div>

    <!-- Medium Cards - Row 2 -->
    <div class="grid md:grid-cols-3 gap-6 lg:gap-8">
      {features.filter(f => f.size === 'medium').map((feature, index) => (
        <div class={`group animate-on-scroll delay-${(index + 3) * 100}`}>
          <div class="relative h-full bg-white rounded-3xl p-8 border-2 border-neutral-100 hover:border-transparent transition-all duration-500 hover:shadow-xl hover:-translate-y-1 overflow-hidden">
            <!-- Left accent border -->
            <div class={`absolute left-0 top-8 bottom-8 w-1 bg-gradient-to-b ${feature.gradient} rounded-full opacity-50 group-hover:opacity-100 transition-opacity duration-300`}></div>

            <div class="relative pl-4">
              <!-- Icon -->
              <div class={`inline-flex items-center justify-center w-14 h-14 bg-gradient-to-br ${feature.gradient} rounded-xl text-white mb-5 shadow-md group-hover:scale-110 transition-transform duration-300`}>
                <Fragment set:html={feature.icon} />
              </div>

              <!-- Content -->
              <h3 class="text-xl font-bold text-neutral-800 mb-3">
                {feature.title}
              </h3>
              <p class="text-neutral-500 leading-relaxed">
                {feature.description}
              </p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
