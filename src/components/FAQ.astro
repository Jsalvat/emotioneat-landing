---
interface Props {
  t: any;
}

const { t } = Astro.props;

const faqs = [
  { q: t.faq.question1.q, a: t.faq.question1.a },
  { q: t.faq.question2.q, a: t.faq.question2.a },
  { q: t.faq.question3.q, a: t.faq.question3.a },
  { q: t.faq.question4.q, a: t.faq.question4.a },
  { q: t.faq.question5.q, a: t.faq.question5.a },
  { q: t.faq.question6.q, a: t.faq.question6.a }
];
---

<section id="faq" class="py-24 px-4 sm:px-6 lg:px-8 bg-white">
  <div class="container mx-auto max-w-4xl">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-4">
        {t.faq.title}
      </h2>
      <p class="text-xl text-gray-600">
        {t.faq.subtitle}
      </p>
    </div>

    <!-- FAQ Items -->
    <div class="space-y-4">
      {faqs.map((faq, index) => (
        <div class={`faq-item bg-gray-50 rounded-2xl overflow-hidden border-2 border-transparent hover:border-brand-200 transition-all animate-on-scroll delay-${Math.min((index + 1) * 100, 400)}`}>
          <!-- SEO UPDATE: Improved accessibility with aria attributes -->
          <button 
            class="faq-question w-full text-left px-6 py-5 flex items-center justify-between"
            data-faq-question={faq.q}
            aria-expanded="false"
            aria-controls={`faq-answer-${index}`}
            id={`faq-question-${index}`}
          >
            <span class="font-semibold text-gray-900 text-lg pr-8">{faq.q}</span>
            <svg class="faq-icon w-6 h-6 text-brand-500 flex-shrink-0 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
          <div class="faq-answer hidden px-6 pb-5" id={`faq-answer-${index}`} role="region" aria-labelledby={`faq-question-${index}`}>
            <p class="text-gray-600 leading-relaxed">{faq.a}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<!-- SEO UPDATE: FAQPage Schema.org for better SEO -->
<script type="application/ld+json" is:inline set:html={JSON.stringify({
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqs.map((faq) => ({
    "@type": "Question",
    "name": faq.q,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": faq.a
    }
  }))
})} />

<script>
  import { trackFAQOpen } from '../scripts/mixpanel';
  
  // Defer FAQ script for performance
  function initFAQTracking() {
    document.querySelectorAll('.faq-question').forEach(button => {
      button.addEventListener('click', () => {
        const item = button.closest('.faq-item');
        const answer = item?.querySelector('.faq-answer');
        const icon = button.querySelector('.faq-icon');
        const question = button.getAttribute('data-faq-question');
        const lang = document.documentElement.lang;
        
        if (answer && icon) {
          const isOpen = !answer.classList.contains('hidden');
          const newState = !isOpen;
          
          if (!isOpen && question) {
            trackFAQOpen(question, lang);
          }
          
          answer.classList.toggle('hidden');
          button.setAttribute('aria-expanded', String(newState));
          const iconElement = icon;
          iconElement.style.transform = newState ? 'rotate(180deg)' : 'rotate(0deg)';
        }
      });
    });
  }
  
  // Initialize when DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initFAQTracking);
  } else {
    initFAQTracking();
  }
</script>
