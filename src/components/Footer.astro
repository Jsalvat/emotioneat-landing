---
interface Props {
  t?: {
    footer: {
      tagline: string;
      product: string;
      features: string;
      support: string;
      faq: string;
      contact: string;
      privacy: string;
      terms: string;
      rights: string;
    };
  };
}

const { t } = Astro.props;

const translations = t || {
  footer: {
    tagline: "Helping you make peace with food, one conversation at a time.",
    product: "Product",
    features: "Features",
    support: "Support",
    faq: "FAQ",
    contact: "Contact",
    privacy: "Privacy Policy",
    terms: "Terms of Service",
    rights: "All rights reserved."
  }
};

const currentYear = new Date().getFullYear();

// SEO Links organized by category
const seoLinks = {
  emotionalEating: [
    { href: '/stop-emotional-eating', label: 'Stop Emotional Eating' },
    { href: '/overcoming-emotional-eating', label: 'Overcoming Emotional Eating' },
    { href: '/emotional-eating-support', label: 'Emotional Eating Support' },
    { href: '/emotional-eating-app', label: 'Emotional Eating App' },
    { href: '/comfort-eating', label: 'Comfort Eating' },
    { href: '/emotional-overeating', label: 'Emotional Overeating' },
  ],
  stressAndTriggers: [
    { href: '/stress-eating-help', label: 'Stress Eating Help' },
    { href: '/stress-eating-help-for-anxiety', label: 'Anxiety Eating Help' },
    { href: '/boredom-eating', label: 'Boredom Eating' },
    { href: '/eating-out-of-boredom', label: 'Eating Out of Boredom' },
    { href: '/binge-eating-triggers', label: 'Binge Eating Triggers' },
    { href: '/emotional-trigger-journal', label: 'Emotional Trigger Journal' },
    { href: '/how-to-stop-comfort-eating', label: 'How to Stop Comfort Eating' },
    { href: '/stress-eating-vs-emotional-eating', label: 'Stress vs Emotional Eating' },
    { href: '/why-do-i-eat-when-stressed', label: 'Why Do I Eat When Stressed' },
  ]
};
---

<footer class="bg-neutral-800 text-neutral-300 pt-20 pb-8 px-4 sm:px-6 lg:px-8">
  <div class="container mx-auto max-w-7xl">
    <!-- Top section -->
    <div class="grid lg:grid-cols-12 gap-12 lg:gap-8 mb-16">
      <!-- Brand Column -->
      <div class="lg:col-span-4">
        <a href="/" class="inline-block mb-6">
          <img
            src="/Logo EmotionEat_Login - Registro.png"
            alt="EmotionEat Logo"
            class="h-12 w-auto brightness-0 invert opacity-90"
            width="140"
            height="48"
            loading="lazy"
          />
        </a>
        <p class="text-neutral-400 leading-relaxed mb-8 max-w-sm">
          {translations.footer.tagline}
        </p>
        <!-- Social links placeholder -->
        <div class="flex items-center gap-4">
          <a href="#" class="w-10 h-10 rounded-xl bg-neutral-700/50 hover:bg-primary-500 flex items-center justify-center text-neutral-400 hover:text-white transition-all duration-300" aria-label="Twitter">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"></path>
            </svg>
          </a>
          <a href="#" class="w-10 h-10 rounded-xl bg-neutral-700/50 hover:bg-primary-500 flex items-center justify-center text-neutral-400 hover:text-white transition-all duration-300" aria-label="Instagram">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"></path>
            </svg>
          </a>
        </div>
      </div>

      <!-- Emotional Eating Links -->
      <div class="lg:col-span-3">
        <h3 class="text-white font-semibold mb-6 text-sm uppercase tracking-wider">Emotional Eating</h3>
        <ul class="space-y-3">
          <li><a href="#features" class="footer-link">{translations.footer.features}</a></li>
          {seoLinks.emotionalEating.map(link => (
            <li><a href={link.href} class="footer-link">{link.label}</a></li>
          ))}
        </ul>
      </div>

      <!-- Stress & Triggers Links -->
      <div class="lg:col-span-3">
        <h3 class="text-white font-semibold mb-6 text-sm uppercase tracking-wider">Stress & Triggers</h3>
        <ul class="space-y-3">
          {seoLinks.stressAndTriggers.map(link => (
            <li><a href={link.href} class="footer-link">{link.label}</a></li>
          ))}
        </ul>
      </div>

      <!-- Support & Legal -->
      <div class="lg:col-span-2">
        <h3 class="text-white font-semibold mb-6 text-sm uppercase tracking-wider">{translations.footer.support}</h3>
        <ul class="space-y-3">
          <li><a href="#how-it-works" class="footer-link">How It Works</a></li>
          <li><a href="#faq" class="footer-link">{translations.footer.faq}</a></li>
          <li><a href="/blog" class="footer-link">Blog</a></li>
          <li><a href="mailto:support@emotioneat.com" class="footer-link">{translations.footer.contact}</a></li>
        </ul>

        <h3 class="text-white font-semibold mb-4 mt-8 text-sm uppercase tracking-wider">Legal</h3>
        <ul class="space-y-3">
          <li><a href="/privacy" class="footer-link">{translations.footer.privacy}</a></li>
          <li><a href="/terms" class="footer-link">{translations.footer.terms}</a></li>
        </ul>
      </div>
    </div>

    <!-- Divider -->
    <div class="border-t border-neutral-700/50"></div>

    <!-- Bottom Bar -->
    <div class="pt-8 flex flex-col sm:flex-row justify-between items-center gap-4">
      <p class="text-sm text-neutral-500">
        Â© {currentYear} EmotionEat. {translations.footer.rights}
      </p>
      <div class="flex items-center gap-2 text-sm text-neutral-500">
        <span>Made with</span>
        <svg class="w-4 h-4 text-primary-400" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"></path>
        </svg>
        <span>for your wellbeing</span>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer-link {
    @apply text-neutral-400 hover:text-primary-300 transition-colors duration-200 text-sm;
  }
</style>
