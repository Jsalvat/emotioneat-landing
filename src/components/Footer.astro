---
interface Props {
  t?: {
    footer: {
      tagline: string;
      product: string;
      features: string;
      support: string;
      faq: string;
      contact: string;
      privacy: string;
      terms: string;
      rights: string;
    };
  };
}

const { t } = Astro.props;

const translations = t || {
  footer: {
    tagline: "Building healthier relationships with food, one day at a time.",
    product: "Product",
    features: "Features",
    support: "Support",
    faq: "FAQ",
    contact: "Contact",
    privacy: "Privacy Policy",
    terms: "Terms of Service",
    rights: "All rights reserved."
  }
};
const currentYear = new Date().getFullYear();
---

<footer class="bg-neutral-900 text-neutral-300 py-16 px-4 sm:px-6 lg:px-8">
  <div class="container mx-auto max-w-7xl">
    <div class="grid md:grid-cols-4 gap-8 mb-12">
      <!-- Brand Column -->
      <div class="md:col-span-2">
        <div class="flex items-center mb-4">
          <img
            src="/Logo EmotionEat_Login - Registro.png"
            alt="EmotionEat Logo"
            class="h-10 w-auto brightness-0 invert"
            width="120"
            height="40"
            loading="lazy"
          />
        </div>
        <p class="text-neutral-400 mb-6 max-w-md">
          {translations.footer.tagline}
        </p>
      </div>

      <!-- Product Column -->
      <div>
        <h3 class="text-white font-semibold mb-4">{translations.footer.product}</h3>
        <ul class="space-y-3">
          <li><a href="#features" class="hover:text-primary-400 transition-colors">{translations.footer.features}</a></li>
          <li><a href="/blog" class="hover:text-primary-400 transition-colors">Blog</a></li>
        </ul>
      </div>

      <!-- Support Column -->
      <div>
        <h3 class="text-white font-semibold mb-4">{translations.footer.support}</h3>
        <ul class="space-y-3">
          <li><a href="#faq" class="hover:text-primary-400 transition-colors">{translations.footer.faq}</a></li>
          <li><a href="mailto:support@emotioneat.com" class="hover:text-primary-400 transition-colors">{translations.footer.contact}</a></li>
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="pt-8 border-t border-neutral-800">
      <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
        <p class="text-sm text-neutral-500">
          Â© {currentYear} EmotionEat. {translations.footer.rights}
        </p>
        <div class="flex space-x-6 text-sm">
          <a href="/privacy" class="text-neutral-500 hover:text-primary-400 transition-colors">{translations.footer.privacy}</a>
          <a href="/terms" class="text-neutral-500 hover:text-primary-400 transition-colors">{translations.footer.terms}</a>
        </div>
      </div>
    </div>
  </div>
</footer>
