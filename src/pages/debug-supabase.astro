    </div>
    
    <!-- Database Connection Check -->
    {isSupabaseConfigured ? (
      <div class={`status-card ${testError ? 'error' : 'success'}`}>
        <div class="status-title">
          <span class={testError ? 'cross' : 'check'}>
            {testError ? '‚úó' : '‚úì'}
          </span>
