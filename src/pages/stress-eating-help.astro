---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

import en from '../i18n/en.json';

const t = en;
const appUrl = import.meta.env.PUBLIC_APP_URL || 'https://app.emotioneat.com';
const siteUrl = 'https://emotioneat.com';

const pageTitle = "Stress Eating Help — Understand Why Stress Leads to Food Urges | EmotionEat";
const pageDescription = "Get stress eating help with EmotionEat's AI guide. Understand why stress triggers eating, identify patterns, and get personalized strategies for high-stress days.";

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "Will this actually help with my stress eating?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "EmotionEat uses AI pattern recognition to identify your specific stress triggers and eating patterns. Unlike generic advice, the strategies you receive are tailored to your unique situation. Many users start noticing their patterns within the first week."
      }
    },
    {
      "@type": "Question",
      "name": "How is this different from a food diary?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Traditional food diaries track what you eat. EmotionEat focuses on why you eat — the emotions, situations, and stress triggers behind your eating behaviors. The AI analyzes your conversations to find patterns you couldn't spot with a simple diary."
      }
    },
    {
      "@type": "Question",
      "name": "Can this replace therapy for stress eating?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "EmotionEat is a supportive tool, not a replacement for professional mental health care. If you have a clinical eating disorder, please consult a healthcare professional. EmotionEat works best as a daily companion for understanding and managing stress-related eating patterns."
      }
    },
    {
      "@type": "Question",
      "name": "How much time does it take each day?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Most users spend 5-10 minutes on their daily check-in. The AI guides the conversation, so you don't need to plan what to say. Just share what's on your mind."
      }
    },
    {
      "@type": "Question",
      "name": "Is my data private?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes. We use bank-level encryption to protect your conversations. We never sell or share your data with third parties. What you share with your AI guide stays private."
      }
    },
    {
      "@type": "Question",
      "name": "What if I skip days?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "That's okay. EmotionEat is designed to meet you where you are. While daily check-ins provide the best pattern insights, the AI adapts to your pace and continues learning from whatever you share."
      }
    }
  ]
};

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": siteUrl
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Stress Eating Help",
      "item": `${siteUrl}/stress-eating-help`
    }
  ]
};

const combinedSchema = {
  "@context": "https://schema.org",
  "@graph": [faqSchema, breadcrumbSchema]
};
---

<Layout
