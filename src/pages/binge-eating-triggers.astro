  <Header t={t} />

  <main id="main-content" class="pt-20">
    <!-- Hero Section -->
    <section class="relative py-16 md:py-24 px-4 sm:px-6 lg:px-8 bg-gradient-to-br from-primary-50 via-white to-accent-50 overflow-hidden">
