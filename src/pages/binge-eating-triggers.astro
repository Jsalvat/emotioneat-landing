---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

import en from '../i18n/en.json';

const t = en;
const appUrl = import.meta.env.PUBLIC_APP_URL || 'https://app.emotioneat.com';
const siteUrl = 'https://emotioneat.com';

const pageTitle = "Binge Eating Triggers — Understand What Leads to Urges | EmotionEat";
const pageDescription = "Discover your binge eating triggers and understand what leads to urges. EmotionEat's AI helps map emotional patterns, recognize warning signs, and build healthier responses.";

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "Can I really identify my binge eating triggers?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes. Triggers often follow patterns that become visible when tracked over time. EmotionEat's AI helps you see connections between emotions, situations, and binge urges that you might not notice on your own."
      }
    },
    {
      "@type": "Question",
      "name": "Is this appropriate for people with eating disorders?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "EmotionEat is a supportive tool for building awareness, not a clinical treatment. If you have a diagnosed eating disorder, please work with a healthcare professional. EmotionEat can complement professional care but doesn't replace it."
      }
    },
    {
      "@type": "Question",
      "name": "How quickly can I identify my triggers?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Most users start seeing patterns within 1-2 weeks of consistent check-ins. The more you share, the better the AI can map your unique trigger profile."
      }
    },
    {
      "@type": "Question",
      "name": "Will identifying triggers stop binge episodes?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Awareness is the first step, not a cure. Knowing your triggers helps you intervene earlier and develop alternative responses, but changing behavior takes time and practice."
      }
    },
    {
      "@type": "Question",
      "name": "Does EmotionEat judge my eating behaviors?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Never. The app is designed to be completely non-judgmental. It's a supportive space to explore your patterns without shame or criticism."
      }
    },
    {
      "@type": "Question",
      "name": "What if my triggers are complex or multiple?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Most people have multiple, interconnected triggers. EmotionEat's pattern analysis is designed to handle complexity and show you how different triggers interact."
      }
    }
  ]
};

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": siteUrl
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Binge Eating Triggers",
      "item": `${siteUrl}/binge-eating-triggers`
    }
  ]
};

const combinedSchema = {
  "@context": "https://schema.org",
  "@graph": [faqSchema, breadcrumbSchema]
};
---

<Layout
  title={pageTitle}
  description={pageDescription}
  ogTitle="Binge Eating Triggers — Understand What Leads to Urges | EmotionEat"
  ogDescription={pageDescription}
  canonical="https://emotioneat.com/binge-eating-triggers"
  structuredData={combinedSchema}
