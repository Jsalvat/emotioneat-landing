---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Hero from '../../components/Hero.astro';
import HowItWorks from '../../components/HowItWorks.astro';
import Features from '../../components/Features.astro';
import FAQ from '../../components/FAQ.astro';
import CTA from '../../components/CTA.astro';
import Footer from '../../components/Footer.astro';

import es from '../../i18n/es.json';

const lang = 'es';
const t = es;
---

<!-- SEO UPDATE: Proper canonical URL for Spanish version -->
<Layout 
  title={t.meta.title}
  description={t.meta.description}
  ogTitle={t.meta.ogTitle}
  ogDescription={t.meta.ogDescription}
  lang={lang}
  canonical="https://emotioneat.com/es"
>
  <Header lang={lang} t={t} />
  <main id="main-content">
    <Hero t={t} lang={lang} />
    <HowItWorks t={t} />
    <Features t={t} />
    <FAQ t={t} />
    <CTA t={t} lang={lang} />
  </main>
  <Footer t={t} />

  <script>
    import { initMixpanel, trackPageView } from '../../scripts/mixpanel';

    // Verificar preferencia del usuario y respetarla
    (function() {
      const urlParams = new URLSearchParams(window.location.search);

      // No hacer nada si ya hay un parámetro lang (usuario eligió idioma manualmente)
      if (urlParams.has('lang')) {
        initMixpanel();
        trackPageView('home', 'es');
        return;
      }

      // Verificar si el usuario tiene una preferencia guardada
      let savedPreference;
      try {
        savedPreference = localStorage.getItem('emotioneat-lang-preference');
      } catch (e) {
        // Si localStorage no está disponible, continuar sin preferencia
        console.warn('Could not access localStorage:', e);
      }
      
      // Si hay una preferencia guardada, respetarla
      if (savedPreference === 'en') {
        // Usuario prefiere inglés, redirigir a la versión en inglés preservando contexto
        if (window.location.pathname.startsWith('/es')) {
          const englishPath = window.location.pathname.replace(/^\/es/, '') || '/';
          const fullUrl = englishPath + window.location.search + window.location.hash;
          window.location.href = fullUrl;
          return;
        }
      }
      
      if (savedPreference === 'es') {
        // Usuario prefiere español, quedarse en /es
        initMixpanel();
        trackPageView('home', 'es');
        return;
      }

      // Si no hay preferencia guardada, mantener el comportamiento actual
      // (quedarse en /es si ya estamos aquí)
      initMixpanel();
      trackPageView('home', 'es');
    })();
  </script>
</Layout>
