---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

import en from '../i18n/en.json';

const t = en;
const appUrl = import.meta.env.PUBLIC_APP_URL || 'https://app.emotioneat.com';
const siteUrl = 'https://emotioneat.com';

const pageTitle = "Why Do I Eat When Stressed? — Understanding Stress-Driven Eating | EmotionEat";
const pageDescription = "Discover why stress triggers food cravings and overeating. EmotionEat helps you understand the stress-eating connection, identify triggers, and build healthier coping strategies.";

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "Is stress eating a real thing, or am I just making excuses?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Stress eating is absolutely real. Research shows that cortisol increases appetite and cravings for calorie-dense foods. You're not making excuses — you're experiencing a documented biological and psychological response to stress."
      }
    },
    {
      "@type": "Question",
      "name": "Can I stop stress eating completely?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "The goal isn't necessarily to eliminate stress eating entirely, but to become aware of it and develop alternative responses. With awareness and practice, you can reduce stress eating and choose different coping strategies when you want to."
      }
    },
    {
      "@type": "Question",
      "name": "How is EmotionEat different from willpower?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Willpower is trying to resist eating through sheer force. EmotionEat helps you understand why you're eating in the first place. When you understand the trigger, you can address the underlying stress rather than just fighting the symptom."
      }
    },
    {
      "@type": "Question",
      "name": "Will tracking my stress eating make me feel worse?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "EmotionEat is designed to be non-judgmental. The focus is on understanding, not criticizing. Many users report feeling relieved when they finally understand why they eat when stressed — it removes the shame and replaces it with insight."
      }
    },
    {
      "@type": "Question",
      "name": "How quickly will I see results?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Most users start recognizing their stress-eating patterns within 1-2 weeks. Changing the behavior takes longer — typically 3-4 weeks of consistent awareness and practice."
      }
    },
    {
      "@type": "Question",
      "name": "Does this replace therapy for stress management?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "EmotionEat is a supportive tool, not a replacement for professional mental health care. If you're experiencing severe stress or anxiety, please consult a healthcare professional. EmotionEat can complement professional care by providing daily support and pattern awareness."
      }
    }
  ]
};

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": siteUrl
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Why Do I Eat When Stressed",
      "item": `${siteUrl}/why-do-i-eat-when-stressed`
    }
  ]
};

const combinedSchema = {
  "@context": "https://schema.org",
  "@graph": [faqSchema, breadcrumbSchema]
};
---

<Layout
  title={pageTitle}
  description={pageDescription}
  ogTitle="Why Do I Eat When Stressed? — Understanding Stress-Driven Eating | EmotionEat"
  ogDescription={pageDescription}
  canonical="https://emotioneat.com/why-do-i-eat-when-stressed"
  structuredData={combinedSchema}
>
  <Header t={t} />

  <main id="main-content" class="pt-20">
    <!-- Hero Section -->
    <section class="relative py-16 md:py-24 px-4 sm:px-6 lg:px-8 bg-gradient-to-br from-primary-50 via-white to-secondary-50 overflow-hidden">
